<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/candy">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/tableLayout">

    </TableLayout>


    <Spinner
        android:id="@+id/opciones_view"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:gravity="fill_vertical"
        android:layout_column="0"
        android:layout_row="2"
        android:layout_gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="51dp" />

    <Button
        android:layout_width="160dp"
        android:layout_height="45dp"
        android:text="ATRAS"
        android:id="@+id/btn"
        android:layout_above="@+id/opciones_view"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Los Dulces tambien se incluyen en nuestros productos"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/opciones_view"
        android:layout_alignEnd="@+id/opciones_view" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableLayout"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/textView2"
        android:id="@+id/relativeLayout">

    </RelativeLayout>

    <Button
        android:layout_width="230dp"
        android:layout_height="150dp"
        android:background="@drawable/candi1"
        android:id="@+id/button2"
        android:layout_above="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp" />


</RelativeLayout>


