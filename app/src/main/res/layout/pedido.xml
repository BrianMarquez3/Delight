<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blur">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="USUARIO"
        android:id="@+id/textView6"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#fff"
        android:layout_marginTop="45dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONTRASEÃ‘A"
        android:id="@+id/textView7"
        android:textColor="#fff"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/txtusuario"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="450dp"
        android:layout_height="wrap_content"
        android:text="Entrar"
        android:id="@+id/ingresar"
        android:layout_gravity="center_horizontal"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtusuario"
        android:layout_below="@+id/textView6"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/txtcontrasena"
        android:layout_below="@+id/textView7"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISTRO"
        android:id="@+id/button7"
        android:layout_below="@+id/ingresar"
        android:layout_alignStart="@+id/ingresar"
        android:layout_alignEnd="@+id/ingresar" />

    <TextView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Si no tienes Un Usuario puede ingresar con &quot;admin&quot;.&quot;admi&quot; para probar el producto y para hacer pedido realize un registro con su propios datos"
        android:id="@+id/textView8"
        android:textColor="#fff"
        android:gravity="center"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/button7"
        android:layout_centerHorizontal="true" />
</RelativeLayout>